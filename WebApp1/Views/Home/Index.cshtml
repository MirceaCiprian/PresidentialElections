@model IEnumerable<MyUser>
@{
    ViewData["Title"] = "Home Page";
}
@{
    int rowNo = 0;
}

<div class="text-center">
    <h1 class="display-4">2024 Elections </h1>
</div>

<h1>Candidates</h1>
@if (Model.Any())
{
@*     <a asp-action="Register" asp-controller="Account"
       class="btn btn-primary mb-3" style="width:auto">
        Add New User
    </a> *@
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last</th>
                <th scope="col">No Votes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@(rowNo += 1)</th>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.noVotes</td>
                    <td><a type="submit" asp-controller="Home" asp-action="UpdateVotes" name="" value="1234" class="btn btn-primary mb-3" style="width:auto"> Vote </a></td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No Users Added Yet
        </div>
    </div>
}

